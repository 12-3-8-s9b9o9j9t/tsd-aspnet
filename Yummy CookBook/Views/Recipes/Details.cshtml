@model Yummy_CookBook.Models.Recipe

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Difficulty)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Difficulty)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NbLikes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NbLikes)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ingredients)
        </dt>
        <dd class = "col-sm-10">
            @foreach (var ingredient in Model.Ingredients)
            {
                @Html.DisplayFor(model => ingredient)
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Process)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Process)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipsTricks)
        </dt>
        <dd class = "col-sm-10">
            @foreach (var tip in Model.TipsTricks)
            {
                @Html.DisplayFor(model => tip)
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
